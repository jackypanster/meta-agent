{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "System Prompts Configuration Schema",
  "description": "Schema for validating system prompt configurations",
  "type": "object",
  "required": ["version", "default_locale", "prompts"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$",
      "description": "Configuration version in semantic versioning format"
    },
    "default_locale": {
      "type": "string",
      "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
      "description": "Default locale code (e.g., 'en', 'zh-CN')"
    },
    "prompts": {
      "type": "object",
      "description": "Collection of system prompts organized by purpose",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "type": "object",
          "required": ["content", "description"],
          "properties": {
            "content": {
              "type": "string",
              "minLength": 10,
              "description": "The actual prompt text content"
            },
            "description": {
              "type": "string",
              "minLength": 5,
              "description": "Human-readable description of the prompt's purpose"
            },
            "variables": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
              },
              "description": "List of variable names that can be substituted in the prompt"
            },
                      "category": {
            "type": "string",
            "enum": ["system", "tool_calling", "memory", "error_handling", "conversation", "agent_config", "error", "ui"],
            "description": "Category of the prompt for organization"
          },
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Whether this prompt is active"
            },
            "version": {
              "type": "string",
              "pattern": "^\\d+\\.\\d+(\\.\\d+)?$",
              "description": "Version of this specific prompt"
            },
                      "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Tags for prompt organization and filtering"
          },
          "source": {
            "type": "string",
            "description": "Original source location for migration tracking"
          }
        },
        "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "updated": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "author": {
          "type": "string",
          "description": "Author of the configuration"
        },
        "description": {
          "type": "string",
          "description": "Description of this configuration set"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
} 